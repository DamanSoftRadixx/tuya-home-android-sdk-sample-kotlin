<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="56dp"
    android:background="@color/white"
    android:paddingLeft="21dp">
    <RelativeLayout
        android:id="@+id/rl_touch"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:minHeight="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="16dp"
        android:paddingRight="11dp">
        <ImageView
            android:id="@+id/iv_touch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/drag"
             />

    </RelativeLayout>



    <ImageView
        android:id="@+id/iv_remove"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/remove" />

    <ImageView
        android:id="@+id/iv_device"
        android:layout_toRightOf="@id/iv_remove"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/device"
        android:layout_width="36dp"
        android:layout_height="36dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/iv_device"
        android:layout_toLeftOf="@id/rl_touch"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/tv_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="test"
            android:textColor="@color/text_color"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="test"
            android:textColor="@color/text_color1"
            android:textSize="13sp"/>
    </LinearLayout>

</RelativeLayout>