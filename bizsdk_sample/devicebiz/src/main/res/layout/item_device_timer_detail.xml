<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/fl_device_detail_clocktime"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/white"
             android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_show_open_off_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="#e6000000"
            android:textSize="18dp" />
        <TextView
            android:layout_marginRight="70dp"
            android:maxEms="50"
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_show_open_off_time"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:textColor="#80000000"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_day_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_remark"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:textColor="#80000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_desc_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_day_time"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:textColor="#80000000"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:id="@+id/v_offline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ccffffff"
        android:visibility="gone"/>

    <Switch
        android:id="@+id/sb_open_clock_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开关"
        android:layout_gravity="right|center_vertical"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"/>
</FrameLayout>